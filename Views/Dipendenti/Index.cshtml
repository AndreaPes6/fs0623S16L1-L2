@{
    ViewData["Title"] = "Dipendenti";
}

<div class="container-fluid">
    <h1 class="display-4">Aggiungi un dipendente</h1>
    <form>
        <div class="d-flex w-100">
        <div class="d-flex flex-column me-5">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" required>
        </div>

        <div class="d-flex flex-column">
        <label for="cognome">Cognome:</label>
        <input type="text" id="cognome" name="cognome" required>
        </div>
        </div>

        <div class="d-flex flex-column w-75">
        <label for="indirizzo">Indirizzo:</label>
        <input type="text" id="indirizzo" name="indirizzo">
        </div> 

        <div class="d-flex flex-column w-75">
        <label for="codice_fiscale">Codice Fiscale:</label>
        <input type="text" id="codice_fiscale" name="codice_fiscale" required>
        </div>

        <div class="d-flex flex-column w-75">
        <label for="coniugato">Coniugato:</label>
        <select id="coniugato" name="coniugato">
            <option value="si">Si</option>
            <option value="no">No</option>
        </select>
        </div>

        <div class="d-flex flex-column w-75">
        <label for="num_figli">Numero di figli a carico:</label>
        <input type="number" id="num_figli" name="num_figli" min="0" value="0">
        </div>

        <div class="d-flex flex-column w-75">
        <label for="mansione">Mansione:</label>
        <input type="text" id="mansione" name="mansione">
        </div>

        <input class="mt-4" type="submit" value="Salva">
    </form>
</div>
